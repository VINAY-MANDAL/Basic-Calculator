import tkinter as tk
import re


def check_strength():

    password = entry.get()
    strength = 0

    if len(password) >= 8:
        strength += 1
    if re.search("[a-z]", password):
        strength += 1
    if re.search("[0-9]", password):
        strength += 1
    if re.search("[A-Z]", password):
        strength += 1
    if re.search("[!@#$%&*_+]", password):
        strength += 1
    
    if strength <= 2:
        result_label.config(text="Weak passwordâŒ", fg="red")
   
    elif strength <= 4:
        result_label.config(text="Medium passwordâš¡", fg="orange")
    
    else:
        result_label.config(text="Strong Passwordâœ”ï¸", fg="green")


#--------GUI Window---------
root = tk.Tk()
root.title("Password strength Checker")
root.geometry("400x200")
root.resizable(False, False)
root.iconbitmap("psc.ico")   # ðŸ‘ˆ icon set

#-------Widgets--------
title = tk.Label(root, text="Password Strength Checker", font=("Arial", 14, "bold"))
title.pack(pady=10)

entry = tk.Entry(root, show="*", width=30)
entry.pack(pady=5)

check_btn = tk.Button(root, text="Check Strength", command=check_strength)
check_btn.pack(pady=10)

result_label = tk.Label(root, text="", font=("Arial",12))
result_label.pack()


root.mainloop()
